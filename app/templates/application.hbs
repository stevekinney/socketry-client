<div id="container">

  <h1>Ember.js Denver Chat</h1>

  <div class="message-count">
    <span class="message-count-label">Number of messages</span>
    {{messageCount}}
  </div>

  <div class="messages">
    {{#each message in model}}
    <div class="message">
      <span class="message-author">{{message.author}}</span>
      <span class="message-body">{{message.message}}</span>
    </div>
    {{/each}}
  </div>

  <div>
  {{#unless author}}
    <label>Your Name</label>
    {{input type="text" id="author-input" placeholder="Your name here…" value=authorInput}}

    <button id="send-message" {{action "setAuthor"}}>Start Chatting</button>
  {{else}}
    <label>Your Message</label>
    {{textarea type="text" id="message-input" placeholder="Your message here…" value=message}}

    <button id="send-message" {{action "sendMessage"}}>Send Message</button>
  {{/unless}}
  </div>

</div>